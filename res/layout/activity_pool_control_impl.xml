<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout android:id="@+id/top_rect"
        android:layout_width="match_parent"
    	android:layout_height="80dp"
    	android:gravity="center"
    	android:orientation="horizontal" >
    	
        <Button 
            android:layout_width="100dp"
    		android:layout_height="wrap_content"
    		android:text="开机"
    		android:onClick="btnPowerClick" />
        <LinearLayout 
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:orientation="vertical"
    		android:gravity="center_horizontal"
    		android:layout_margin="5dp">
            <TextView android:id="@+id/control_device_name"
            	android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:gravity="center"
    			android:text="UNDEFINE" />
            <TextView android:id="@+id/control_source_id"
            	android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:gravity="center"
    			android:text="信号源丢失" />
            <TextView android:id="@+id/control_screen_id"
            	android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:gravity="center"
    			android:text="线路丢失" />
            
        </LinearLayout>
        
        <Button 
            android:layout_width="100dp"
    		android:layout_height="wrap_content"
    		android:text="静音"
    		android:onClick="btnMuteClick" />
    </LinearLayout>
    
    <LinearLayout android:id="@+id/second_rect"
        android:layout_width="match_parent"
    	android:layout_height="120dp"
    	android:layout_below="@id/top_rect"
    	android:orientation="vertical">
        
        <LinearLayout 
        	android:layout_width="match_parent"
    		android:layout_height="60dp"
    		android:orientation="horizontal"
    		android:gravity="center">
    		<Button 
            	android:layout_width="50dp"
    			android:layout_height="wrap_content"
    			android:layout_margin="5dp"
    			android:text="1"
    			android:onClick="btn1Click" />
    		<Button 
            	android:layout_width="50dp"
    			android:layout_height="wrap_content"
    			android:layout_margin="5dp"
    			android:text="2"
    			android:onClick="btn2Click" />
    		<Button 
            	android:layout_width="50dp"
    			android:layout_height="wrap_content"
    			android:layout_margin="5dp"
    			android:text="3"
    			android:onClick="btn3Click" />
    		<Button 
            	android:layout_width="50dp"
    			android:layout_height="wrap_content"
    			android:layout_margin="5dp"
    			android:text="4"
    			android:onClick="btn4Click" />
    		<Button 
            	android:layout_width="50dp"
    			android:layout_height="wrap_content"
    			android:layout_margin="5dp"
    			android:text="5"
    			android:onClick="btn5Click" />
        </LinearLayout>
        
        <LinearLayout 
        	android:layout_width="match_parent"
    		android:layout_height="60dp"
    		android:orientation="horizontal"
    		android:gravity="center">
    		<Button 
            	android:layout_width="50dp"
    			android:layout_height="wrap_content"
    			android:layout_margin="5dp"
    			android:text="6"
    			android:onClick="btn6Click" />
    		<Button 
            	android:layout_width="50dp"
    			android:layout_height="wrap_content"
    			android:layout_margin="5dp"
    			android:text="7"
    			android:onClick="btn7Click" />
    		<Button 
            	android:layout_width="50dp"
    			android:layout_height="wrap_content"
    			android:layout_margin="5dp"
    			android:text="8"
    			android:onClick="btn8Click" />
    		<Button 
            	android:layout_width="50dp"
    			android:layout_height="wrap_content"
    			android:layout_margin="5dp"
    			android:text="9"
    			android:onClick="btn9Click" />
    		<Button 
            	android:layout_width="50dp"
    			android:layout_height="wrap_content"
    			android:layout_margin="5dp"
    			android:text="0"
    			android:onClick="btn0Click" />
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="180dp"
    	android:layout_below="@id/second_rect"
    	android:orientation="vertical">
        <LinearLayout 
        	android:layout_width="match_parent"
    		android:layout_height="60dp"
    		android:orientation="horizontal"
    		android:gravity="center">
    		<Button 
            	android:layout_width="100dp"
    			android:layout_height="wrap_content"
    			android:layout_margin="5dp"
    			android:text="音量+"
    			android:onClick="btnUpClick" />
        </LinearLayout>
        <LinearLayout 
        	android:layout_width="match_parent"
    		android:layout_height="60dp"
    		android:orientation="horizontal"
    		android:gravity="center">
    		<Button 
            	android:layout_width="100dp"
    			android:layout_height="wrap_content"
    			android:layout_margin="5dp"
    			android:text="频道-"
    			android:onClick="btnLeftClick" />
    		<Button 
            	android:layout_width="100dp"
    			android:layout_height="wrap_content"
    			android:layout_margin="5dp"
    			android:text="确定"
    			android:onClick="btnOkClick" />
    		<Button 
            	android:layout_width="100dp"
    			android:layout_height="wrap_content"
    			android:layout_margin="5dp"
    			android:text="频道+"
    			android:onClick="btnRightClick" />
        </LinearLayout>
        <LinearLayout 
        	android:layout_width="match_parent"
    		android:layout_height="60dp"
    		android:orientation="horizontal"
    		android:gravity="center">
    		<Button 
            	android:layout_width="100dp"
    			android:layout_height="wrap_content"
    			android:layout_margin="5dp"
    			android:text="音量-"
    			android:onClick="btnDownClick" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
