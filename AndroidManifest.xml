<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smartlife.smartlifec"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />

    <uses-permission android:name="android.permission.INTERNET" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:name="com.smartlife.smartlifec.SplashActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.smartlife.smartlifec.PoolControlImplActivity"
            android:screenOrientation="portrait" />
        
        <activity
            android:name="com.smartlife.smartlifec.setting.SettingMenuActivity"
            android:screenOrientation="portrait" /> 
        <activity
            android:name="com.smartlife.smartlifec.setting.SettingDeviceTypeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.smartlife.smartlifec.setting.SettingIpInfoActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>
